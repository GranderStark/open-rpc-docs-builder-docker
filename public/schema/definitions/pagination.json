{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "pagination",
    "description": "Объект пагинации",
    "type": "object",
    "required": [
        "page",
        "limit"
    ],
    "properties": {
        "page": {
            "type": "integer",
            "description": "Номер страницы",
            "examples": [
                1
            ],
            "minimum": 1,
            "default": 1
        },
        "limit": {
            "type": "integer",
            "description": "Количество объектов на странице",
            "examples": [
                10
            ],
            "minimum": 1,
            "maximum": 100,
            "default": 10
        }
    }
}
