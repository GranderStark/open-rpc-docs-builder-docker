{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "tag entity",
    "type": "object",
    "description": "Метка пользователя",
    "required": [
        "id",
        "name",
        "created_at",
        "updated_at"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "description": "Id",
            "examples": [
                1
            ]
        },
        "name": {
            "type": "string",
            "description": "Name of tag",
            "examples": [
                "new",
                "old",
                "some"
            ]
        },
        "created_at": {
            "$ref": "../definitions/datetime.json"
        },
        "updated_at": {
            "$ref": "../definitions/datetime.json"
        }
    }
}

